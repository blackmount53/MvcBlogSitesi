
@{
    ViewBag.Title = "Kategori Listeleme";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Areas/Admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/custom/deleteRecordTable.js"></script>

@model IEnumerable<MvcBlogSitesi.Areas.Admin.Models.DTO.CategoryVM>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Kategori Listesi
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@ViewBag.Title</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="listKategori" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="a_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>                                                              
                                <td>
                                    <a class="btn btn-success" style="cursor:pointer" href="/Admin/Category/UpdateCategory/@item.ID">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-danger" href="#" onclick="Delete('/Admin/Category/DeleteCategory/',@item.ID)" aria-label="Delete" style="cursor:pointer">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    </a>                                      
                                </td>
                            </tr>
                            }                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Kategori</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

<script>
  $(function () {
    //$("#example1").DataTable();
    $('#listKategori').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
