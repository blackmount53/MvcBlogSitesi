          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>
<body>

    <!-- ~~~=| Header START |=~~~ -->
    @Html.Partial("Partial/HeaderPartial")
    <!-- ~~~=| Header END |=~~~ -->
    <!-- ~~~=| Banner START |=~~~ -->
    @*@Html.Partial("Partial/BannerPartial")*@
    <!-- ~~~=| Banner END |=~~~ -->
    <!-- ~~~=| Main Wrapper END |=~~~ -->
    <section class="main_news_wrapper">
        <div class="container">
            @RenderBody()
        </div>
    </section>
    <!-- ~~~=| Main Wrapper END |=~~~ -->
    <!-- ~~~=| Footer START |=~~~ -->
    @Html.Partial("Partial/FooterPartial")
    <!-- ~~~=| Footer END |=~~~ -->
    <!-- ~~~=| Latest jQuery |=~~~ -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- ~~~=| Bootstrap jQuery |=~~~ -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- ~~~=| Opacity & Other IE fix for older browser |=~~~ -->
    <!--[if lte IE 8]>
            <script type="text/javascript" src="~/Scripts/ie-opacity-polyfill.js"></script>
        <![endif]-->
    <!-- ~~~=| Theme jQuery |=~~~ -->
    <script src="~/Scripts/Site/main.js"></script>
</body>
</html>

