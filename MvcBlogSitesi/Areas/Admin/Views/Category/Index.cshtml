
@{
    ViewBag.Title = "Kategori Listeleme";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Areas/Admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>

@model IEnumerable<MvcBlogSitesi.Areas.Admin.Models.DTO.CategoryVM>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Kategori Listesi
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@ViewBag.Title</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="listKategori" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th colspan="2">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="a_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.ID">Güncelle</a></td>
                                <td><a href="#" onclick="Delete(@item.ID)"><i class="fa fa-fw fa-remove" style="cursor:pointer"></i></a></td>
                            </tr>
                            }                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th colspan="2">İşlemler</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->



<script>
    function Delete(id) {
        console.log("gelen id " + id);
        $.ajax({
            url: "/Admin/Category/DeleteCategory/" + id,
            //data:id,
            type: "POST",
            success: function (result) {
                $("#a_" + id).fadeOut();
            }
        });
    }

</script>
<script>
  $(function () {
    //$("#example1").DataTable();
    $('#listKategori').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
