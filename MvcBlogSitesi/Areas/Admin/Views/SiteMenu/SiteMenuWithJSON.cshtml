
@{
    ViewBag.Title = "SiteMenuWithJSON";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/messages_tr.min.js"></script>

<section class="content-header">
    <h1>
        Site Menu Ekleme İşlemi
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-9">

            <div class="box box-primary">
                <div class="box-body">

                    <form action="#" id="frmSiteMenu" method="post">
                        <div class="form-group">
                            <label>Ad</label>
                            <input type="text" class="form-control" id="Name" placeholder="Name" required />
                        </div>
                        <div class="form-group">
                            <label>Url</label>
                            <input type="text" class="form-control" id="Url" placeholder="Url" required />
                        </div>
                        <div class="form-group">
                            <label>Css Class</label>
                            <input type="text" class="form-control" id="cssClass" placeholder="Css Class" />
                        </div>
                        <div class="form-group">
                            <button type="button" id="btnGonder"  class="btn btn-primary" >Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>

<script>
  
    $("#btnGonder").click(function () {
        var sitemnu = new Object();
        sitemnu.Name = $("#Name").val();
        sitemnu.Url = $("#Url").val();
        sitemnu.cssClass = $("#cssClass").val();        
        $.ajax({
            url: "/Admin/SiteMenu/AddSiteMenuJSON/",
            data: sitemnu,
            type: "post",
            success: function (response) {
                console.log("response : "+ response);               
            }
        });            
     });

</script>